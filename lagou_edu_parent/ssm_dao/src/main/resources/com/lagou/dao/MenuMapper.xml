<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lagou.dao.MenuMapper">
    
    <!--采用关联查询时的resultMap-->
    <resultMap id="guanlian" type="menu">
        <id property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="href" column="href"/>
        <result property="icon" column="icon"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="orderNum" column="order_num"/>
        <result property="shown" column="shown"/>
        <result property="level" column="level"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedBy" column="updated_by"/>
        <collection property="subMenuList" ofType="menu">
            <id property="id" column="sid"/>
            <result property="parentId" column="sparent_id"/>
            <result property="href" column="shref"/>
            <result property="icon" column="sicon"/>
            <result property="name" column="sname"/>
            <result property="description" column="sdescription"/>
            <result property="orderNum" column="sorder_num"/>
            <result property="shown" column="sshown"/>
            <result property="level" column="slevel"/>
            <result property="createdTime" column="screated_time"/>
            <result property="updatedTime" column="supdated_time"/>
            <result property="createdBy" column="screated_by"/>
            <result property="updatedBy" column="supdated_by"/>
        </collection>
    </resultMap>
    
    <!--查询所有的父菜单及其关联的子菜单(关联查询)-->
    <select id="findAllMenu" parameterType="int" resultMap="guanlian">
        select menu.*, sub.id sid, sub.parent_id sparent_id, sub.href shref, sub.icon sicon, 
               sub.name sname, sub.description sdescription, sub.order_num sorder_num, 
               sub.shown sshown, sub.level slevel, sub.created_time screated_time, 
               sub.updated_time supdated_time, sub.created_by screated_by, sub.updated_by supdated_by 
        from menu left join menu sub  on menu.id = sub.parent_id where menu.parent_id = #{pid}
    </select>
    
    
    <!--嵌套查询用到的resultMap-->
    <resultMap id="qiantao" type="menu">
        <id property="id" column="id"/>
        <result property="parentId" column="parent_id"/>
        <result property="href" column="href"/>
        <result property="icon" column="icon"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="orderNum" column="order_num"/>
        <result property="shown" column="shown"/>
        <result property="level" column="level"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedBy" column="updated_by"/>
        <collection property="subMenuList" column="id" select="com.lagou.dao.MenuMapper.findAllMenu2"/>
    </resultMap>
    
    <!--查询所有的父菜单及其关联的子菜单(嵌套查询)-->
    <select id="findAllMenu2" parameterType="int" resultMap="qiantao">
        select * from menu where parent_id = #{pid}
    </select>
    
    <!--查询所有的菜单列表-->
    <select id="findMenuList" resultType="menu">
        select * from menu
    </select>
    
    <!--新增菜单-->
    <insert id="saveMenu" parameterType="menu">
        INSERT INTO menu (parent_id, href, icon, `name`, description, order_num,
            shown, `level`, created_time, updated_time, created_by, updated_by)
        values(#{parentId}, #{href}, #{icon}, #{name}, #{description}, #{orderNum}, #{shown}, 
            #{level}, #{createdTime}, #{updatedTime}, #{createdBy}, #{updatedBy})
    </insert>
    
    <!--根据id查询菜单-->
    <select id="findMenuById" parameterType="int" resultType="menu">
        select * from menu where id = #{mid}
    </select>
    
    <!--修改菜单信息-->
    <update id="updateMenu" parameterType="menu">
        update menu 
        <trim prefix="set" suffixOverrides=",">
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="href != null and href != ''">
                href = #{href},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="name != null and name != ''">
                `name` = #{name},
            </if>
            <if test="orderNum != null and orderNum != ''">
                order_num = #{orderNum},
            </if>
            <if test="parentId != null and parentId != ''">
                parent_id = #{parentId},
            </if>
            <if test="shown != null and shown != ''">
                shown = #{shown},
            </if>
            <if test="level != null and level != ''">
                level = #{level},
            </if>
            <if test="updatedTime != null">
                updated_time = #{updatedTime},
            </if>
        </trim>
            where id = #{id}
    </update>
    
    
</mapper>